package ParteMario;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.SQLException;

import javax.swing.JOptionPane;
public class accionEquipamiento implements ActionListener{
	private latderch d;
	private latizq izq;
	accionEquipamiento(latderch de) throws ClassNotFoundException, SQLException{
		d = de;
		this.izq = de.getLatizq(); 
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		switch(e.getActionCommand()) {
		case "botonBorrar":
			 	izq.getTxDescr().setText(""); // Usa la referencia correcta de latizq
			    izq.getTxNom().setText(""); 
			break;
		case "botonInsertar":
			
			boolean enc = false;
			if(d.getLatizq().getTxDescr().getText().isEmpty() || d.getLatizq().getTxNom().getText().isEmpty()) {
				enc = true;
			}
			if(enc) {
				JOptionPane.showMessageDialog(d, "Porfavor, rellene los campos");
			}
			else {
				
				/*try {
					d.getLatizq().getBd().ejecutarSQL1("INSERT INTO");
				} catch (SQLException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}*/
				
			}
			
			
			
			
			break;
		}
	}
	public latderch getD() {
		return d;
	}
	public void setD(latderch d) {
		this.d = d;
	}
}