		BaseDatos bd=new BaseDatos();
		
		ResultSet rs=bd.ejecutarSQL1("SELECT * FROM empleado");
		
		while (rs.next()) {
			
			
			
		}
		
		
		bd.cerrarConex();
		
	}
	
}
