package marcos;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.FlowLayout;
import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JSlider;
import javax.swing.JTextField;
import javax.swing.border.Border;

public class BordeFormulario extends JPanel {
    private Border bordeFormularioCliente;
    private JLabel labelIdCliente;
    private JTextField cajaIdCliente;
    private JLabel labelNombreCliente;
    private JTextField cajaNombreCliente;
    private JLabel labelTelefonoCliente;
    private JTextField cajaTelefonoCliente;
    private JLabel labelDniCliente;
    private JTextField cajaDniCliente;
    private JLabel labelEdadCliente;
    private JSlider barraEdadCliente;
    private JLabel labelIdTarifaCliente;
    private JTextField cajaIdTarifaCliente;
    private JButton botonAltaCliente;
    private JButton botonBuscarCliente;

    BordeFormulario(VentanaPrincipal ventanaPrincipal) {
        this.setLayout(new FlowLayout());
        this.bordeFormularioCliente = BorderFactory.createTitledBorder("DAR DE ALTA");
        this.labelIdCliente = new JLabel("introduzca su id:");
        this.cajaIdCliente = new JTextField();
        this.labelNombreCliente = new JLabel("introduzca su nombre:");
        this.cajaNombreCliente = new JTextField();
        this.labelTelefonoCliente = new JLabel("introduzca su telefono:");
        this.cajaTelefonoCliente = new JTextField();
        this.labelDniCliente = new JLabel("introduzca su dni:");
        this.cajaDniCliente = new JTextField();
        this.labelEdadCliente = new JLabel("introduzca su edad:");
        this.barraEdadCliente = new JSlider(10, 80);
        this.barraEdadCliente.setMajorTickSpacing(5);
        this.barraEdadCliente.setMinorTickSpacing(1);
        this.barraEdadCliente.setPaintTicks(true);
        this.barraEdadCliente.setPaintLabels(true);
        this.labelIdTarifaCliente = new JLabel("introduzca su tarifa:");
        this.cajaIdTarifaCliente = new JTextField();
        this.botonAltaCliente = new JButton("ALTA");
        this.botonBuscarCliente = new JButton("BUSCAR");
        this.labelIdCliente.setPreferredSize(new Dimension(150, 25));
        this.cajaIdCliente.setPreferredSize(new Dimension(150, 25));
        this.labelNombreCliente.setPreferredSize(new Dimension(150, 25));
        this.cajaNombreCliente.setPreferredSize(new Dimension(150, 25));
        this.labelTelefonoCliente.setPreferredSize(new Dimension(150, 25));
        this.cajaTelefonoCliente.setPreferredSize(new Dimension(150, 25));
        this.labelDniCliente.setPreferredSize(new Dimension(150, 25));
        this.cajaDniCliente.setPreferredSize(new Dimension(150, 25));
        this.labelEdadCliente.setPreferredSize(new Dimension(300, 25));
        this.labelEdadCliente.setHorizontalAlignment(0);
        this.barraEdadCliente.setPreferredSize(new Dimension(300, 50));
        this.labelIdTarifaCliente.setPreferredSize(new Dimension(150, 25));
        this.cajaIdTarifaCliente.setPreferredSize(new Dimension(150, 25));
        this.botonAltaCliente.setPreferredSize(new Dimension(150, 25));
        this.botonBuscarCliente.setPreferredSize(new Dimension(150, 25));
        this.setPreferredSize(new Dimension(400, 350));
        this.botonAltaCliente.addActionListener(new onClick(ventanaPrincipal));
        this.botonAltaCliente.setActionCommand("botonAltaCliente");
        this.cajaIdCliente.setBackground(Color.LIGHT_GRAY);
        this.cajaNombreCliente.setBackground(Color.LIGHT_GRAY);
        this.cajaTelefonoCliente.setBackground(Color.LIGHT_GRAY);
        this.cajaDniCliente.setBackground(Color.LIGHT_GRAY);
        this.cajaIdTarifaCliente.setBackground(Color.LIGHT_GRAY);
        this.botonAltaCliente.setBackground(Color.yellow);
        this.setBorder(this.bordeFormularioCliente);
        this.add(this.labelIdCliente);
        this.add(this.cajaIdCliente);
        this.add(this.labelNombreCliente);
        this.add(this.cajaNombreCliente);
        this.add(this.labelTelefonoCliente);
        this.add(this.cajaTelefonoCliente);
        this.add(this.labelDniCliente);
        this.add(this.cajaDniCliente);
        this.add(this.labelEdadCliente);
        this.add(this.barraEdadCliente);
        this.add(this.labelIdTarifaCliente);
        this.add(this.cajaIdTarifaCliente);
        this.add(this.botonAltaCliente);
    }

    public void a√±adirBotonBuscar() {
        this.add(this.botonBuscarCliente);
    }

    public void borrarBotonAlta() {
        this.remove(this.botonAltaCliente);
    }

    public void cambiarColorComponentesBaja() {
        this.cajaNombreCliente.setBackground(Color.GREEN);
        this.cajaTelefonoCliente.setBackground(Color.GREEN);
        this.cajaDniCliente.setBackground(Color.GREEN);
        this.cajaIdTarifaCliente.setBackground(Color.GREEN);
        this.botonAltaCliente.setBackground(Color.GREEN);
    }

    public void deshabilitarComponentesBaja() {
        this.cajaNombreCliente.setEnabled(false);
        this.cajaTelefonoCliente.setEnabled(false);
        this.cajaDniCliente.setEnabled(false);
        this.barraEdadCliente.setEnabled(false);
        this.cajaIdTarifaCliente.setEnabled(false);
        this.cajaNombreCliente.setBackground(Color.RED);
        this.cajaTelefonoCliente.setBackground(Color.RED);
        this.cajaDniCliente.setBackground(Color.RED);
        this.cajaIdTarifaCliente.setBackground(Color.RED);
        this.botonAltaCliente.setBackground(Color.RED);
    }

    public Border getBordeFormularioCliente() {
        return this.bordeFormularioCliente;
    }

    public void setBordeFormularioCliente(Border bordeFormularioCliente) {
        this.bordeFormularioCliente = bordeFormularioCliente;
    }

    public JLabel getLabelIdCliente() {
        return this.labelIdCliente;
    }

    public void setLabelIdCliente(JLabel labelIdCliente) {
        this.labelIdCliente = labelIdCliente;
    }

    public JTextField getCajaIdCliente() {
        return this.cajaIdCliente;
    }

    public void setCajaIdCliente(JTextField cajaIdCliente) {
        this.cajaIdCliente = cajaIdCliente;
    }

    public JLabel getLabelNombreCliente() {
        return this.labelNombreCliente;
    }

    public void setLabelNombreCliente(JLabel labelNombreCliente) {
        this.labelNombreCliente = labelNombreCliente;
    }

    public JTextField getCajaNombreCliente() {
        return this.cajaNombreCliente;
    }

    public void setCajaNombreCliente(JTextField cajaNombreCliente) {
        this.cajaNombreCliente = cajaNombreCliente;
    }

    public JLabel getLabelTelefonoCliente() {
        return this.labelTelefonoCliente;
    }

    public void setLabelTelefonoCliente(JLabel labelTelefonoCliente) {
        this.labelTelefonoCliente = labelTelefonoCliente;
    }

    public JTextField getCajaTelefonoCliente() {
        return this.cajaTelefonoCliente;
    }

    public void setCajaTelefonoCliente(JTextField cajaTelefonoCliente) {
        this.cajaTelefonoCliente = cajaTelefonoCliente;
    }

    public JLabel getLabelDniCliente() {
        return this.labelDniCliente;
    }

    public void setLabelDniCliente(JLabel labelDniCliente) {
        this.labelDniCliente = labelDniCliente;
    }

    public JTextField getCajaDniCliente() {
        return this.cajaDniCliente;
    }

    public void setCajaDniCliente(JTextField cajaDniCliente) {
        this.cajaDniCliente = cajaDniCliente;
    }

    public JLabel getLabelEdadCliente() {
        return this.labelEdadCliente;
    }

    public void setLabelEdadCliente(JLabel labelEdadCliente) {
        this.labelEdadCliente = labelEdadCliente;
    }

    public JSlider getBarraEdadCliente() {
        return this.barraEdadCliente;
    }

    public void setBarraEdadCliente(JSlider barraIdEdadCliente) {
        this.barraEdadCliente = barraIdEdadCliente;
    }

    public JLabel getLabelIdTarifaCliente() {
        return this.labelIdTarifaCliente;
    }

    public void setLabelIdTarifaCliente(JLabel labelIdTarifaCliente) {
        this.labelIdTarifaCliente = labelIdTarifaCliente;
    }

    public JTextField getCajaIdTarifaCliente() {
        return this.cajaIdTarifaCliente;
    }

    public void setCajaIdTarifaCliente(JTextField cajaIdTarifaCliente) {
        this.cajaIdTarifaCliente = cajaIdTarifaCliente;
    }

    public JButton getBotonAltaCliente() {
        return this.botonAltaCliente;
    }

    public void setBotonAltaCliente(JButton botonAltaCliente) {
        this.botonAltaCliente = botonAltaCliente;
    }
}