package Yoel;

import java.awt.FlowLayout;
import java.util.Iterator;

import javax.swing.JInternalFrame;
import javax.swing.JLabel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Altatarifas extends JInternalFrame{
private JLabel []lb;
private JTextArea ta;
private JTextField []tx;
public Altatarifas() {
	this.setLayout(new FlowLayout(FlowLayout.CENTER));
lb=new JLabel[3];
ta=new JTextArea();
tx=new JTextField[2];
String []titulos= {"Nombre:","Descrpcion:","Precio:"};
for (int i = 0; i < lb.length; i++) {
	lb[i]=new JLabel(titulos[i]);
}
for (int i = 0; i < tx.length; i++) {
	tx[i]=new JTextField();
}
this.getContentPane().add(lb[0]);
this.getContentPane().add(tx[0]);
this.getContentPane().add(lb[1]);
this.getContentPane().add(ta);
this.getContentPane().add(lb[2]);
this.getContentPane().add(tx[1]);
this.setVisible(true);
}
}
