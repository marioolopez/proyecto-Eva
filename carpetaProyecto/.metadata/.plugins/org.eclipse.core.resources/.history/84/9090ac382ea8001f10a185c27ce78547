package ParteMario;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
public class exportarPDFEquip implements ActionListener{
	private ListadoEquipMant listEq;
	private PDFEquipamiento pdf;
	public exportarPDFEquip(ListadoEquipMant list) {
	listEq = list;
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		switch(e.getActionCommand()) {
		  if (e.getActionCommand().equals("exportar")) {
	            try {
	                // Llamar a la clase PDFEquipamiento para generar el PDF
	                PDFEquipamiento pdf = new PDFEquipamiento();
	                pdf.exportarPDF(listEq.getTablaDef()); // Pasamos la tabla de datos al método de exportación
	            } catch (Exception ex) {
	                ex.printStackTrace();
	            }
	        }
	}

}
