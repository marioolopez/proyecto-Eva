package Yoel;

import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.GridLayout;

import javax.swing.*;

public class PanelParaContenidoBaja extends JPanel{
	private JLabel []lb;
	private JTextArea ta;
	private JTextField []tx;
PanelParaContenidoBaja()
{
	this.setLayout(new FlowLayout());
		lb=new JLabel[3];
		ta=new JTextArea();
		tx=new JTextField[2];
		String []titulos= {"Nombre:","Descripcion:","Precio:"};
		for (int i = 0; i < lb.length; i++) {
			lb[i]=new JLabel(titulos[i]);
			lb[i].setPreferredSize(new Dimension(350,20));
			
		}
		for (int i = 0; i < tx.length; i++) {
			tx[i]=new JTextField();
			tx[i].setPreferredSize(new Dimension(350,20));
			tx[i].setEnabled(false);
		}
		ta.setPreferredSize(new Dimension(350,200));
		ta.setEnabled(false);
		this.add(lb[0]);
		this.add(tx[0]);
		this.add(lb[1]);
		this.add(ta);
		this.add(lb[2]);
		this.add(tx[1]);
}

}
