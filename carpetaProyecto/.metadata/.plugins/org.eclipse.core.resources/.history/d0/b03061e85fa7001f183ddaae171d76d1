package ParteMario;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.SQLException;
import javax.swing.JOptionPane;
public class accionEquipamiento implements ActionListener {
	private latderch d;
	accionEquipamiento(latderch de) throws ClassNotFoundException, SQLException {
		d = de;
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		switch(e.getActionCommand()) {
		case "botonBorrar":
			d.getIzq().getTxNom().setText("");
			d.getIzq().getArea().setText("");
			break;
		case "botonInsertar":			
			boolean enc = false;
			if(d.getIzq().getArea().getText().isEmpty() || d.getIzq().getTxNom().getText().isEmpty()) {
				enc = true;
			}
			if(enc) {
				JOptionPane.showMessageDialog(d, "Porfavor, rellene los campos");
			}
			else {
                try {        	
                	int idE = d.getIzq().incrementarEquipamiento();
    				int idA = d.getIzq().incrementarActividad();
    				int idM = d.getIzq().incrementarMantenimiento();
    				int idMI = d.getIzq().incrementarMantenimientoTablaMantenimiento();
    				String nomManten = d.getNomMant().getText();
    				d.getIzq().getBd().ejecutarSQL2("INSERT INTO equipamiento(id, nombre, descripcion, idactividad, idmantenimiento) VALUES('"+idE+"', '"+d.getIzq().getTxNom().getText()+"', '"+d.getIzq().getTxDescr().getText()+"', '"+idA+"', '"+idM+"')");
    				d.getIzq().getBd().ejecutarSQL2("INSERT INTO mantenimiento(id, nombre) VALUES('"+idMI+"', '"+nomManten+"')");
                } catch (SQLException e1) {
					e1.printStackTrace();
				}
                JOptionPane.showMessageDialog(d, "Datos insertados correctamente");
			}
			break;
		}
	}
	
	public latderch getD() {
		return d;
	}
	public void setD(latderch d) {
		this.d = d;
	}
}