package ParteMario;

import java.awt.*;
import javax.swing.*;
import javax.swing.border.EmptyBorder;

public class latizq extends JPanel {
    private JPanel p1, p2;
    private JLabel NomId, NomNom, NomDescr;
    private JTextField TxId, TxNom, TxDescr;

    public latizq() {
        // Establece un borde para todo el panel
        this.setBorder(new EmptyBorder(10, 10, 10, 10));
        this.setLayout(new BorderLayout(10, 10));

        // Panel p1 con un diseño más estético
        p1 = new JPanel(new GridBagLayout());
        p1.setBorder(BorderFactory.createTitledBorder("Información del Equipamiento"));
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.insets = new Insets(5, 5, 5, 5);
        gbc.fill = GridBagConstraints.HORIZONTAL;

        NomId = new JLabel("Último Id Equipamiento:");
        TxId = new JTextField();

        NomNom = new JLabel("Nombre Equipamiento:");
        TxNom = new JTextField();

        NomDescr = new JLabel("Descripción Equipamiento:");
        TxDescr = new JTextField();

        // Añadir elementos con un diseño estructurado
        gbc.gridx = 0;
        gbc.gridy = 0;
        p1.add(NomId, gbc);

        gbc.gridx = 1;
        gbc.gridy = 0;
        p1.add(TxId, gbc);

        gbc.gridx = 0;
        gbc.gridy = 1;
        p1.add(NomNom, gbc);

        gbc.gridx = 1;
        gbc.gridy = 1;
        p1.add(TxNom, gbc);

        gbc.gridx = 0;
        gbc.gridy = 2;
        p1.add(NomDescr, gbc);

        gbc.gridx = 1;
        gbc.gridy = 2;
        p1.add(TxDescr, gbc);

        // Panel p2 para contenido adicional
        p2 = new JPanel(new FlowLayout(FlowLayout.CENTER, 10, 10));
        p2.setBorder(BorderFactory.createTitledBorder("Opciones adicionales"));
        JLabel placeholder = new JLabel("Contenido adicional aquí");
        placeholder.setForeground(Color.GRAY);
        p2.add(placeholder);

        // Agregar ambos paneles a la interfaz
        this.add(p1, BorderLayout.CENTER);
        this.add(p2, BorderLayout.SOUTH);
    }
}
